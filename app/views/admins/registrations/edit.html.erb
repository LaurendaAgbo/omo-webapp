<h2>Edit <%= resource_name.to_s.humanize %></h2>
<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <% if notice %>
      <p class="notice alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="notice alert alert-danger"><%= alert %></p>
    <% end %>

    <div class="row">
      <div class="col-md-12">
        <div class="field form-group">
          <%= f.text_field :centre_ps, autofocus: true, class: "form-control", placeholder: t("admins.centre_ps") %>
        </div>

        <div class="field form-group">
          <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: t("admins.first_name") %>
        </div>

        <div class="field form-group">
          <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: t("admins.last_name") %>
        </div>

        <div class="field form-group">
          <%= f.text_field :contact, autofocus: true, class: "form-control", placeholder: t("admins.contact") %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div><%= t("admins.registrations.edit.wait_confirmation") %><%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field form-group">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: t("admins.new_password") %>
            <em>
              <%= f.label :password, t("admins.registrations.edit.new_password_assistive_text") %> /
              <% if @minimum_password_length %>
                ( <%= @minimum_password_length %> caract√®res minimum)
              <% end %>
            </em>
        </div>

        <div class="field form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: t("admins.confirm_new_password") %>
        </div>

        <div class="field form-group">
          <%= f.password_field :current_password, autocomplete: "current-password" %>
          <em><%= f.label :current_password, t("admins.registrations.edit.current_password_assistive_text") %></em>
        </div>

        <div class="actions form-group">
          <%= f.submit t("admins.registrations.edit.submit"), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
