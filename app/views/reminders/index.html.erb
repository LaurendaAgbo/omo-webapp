            <td><%= t('reminder.index.edit_link') %></td>
            <td><%= t('reminder.index.delete_link') %></td>
          </tfoot> -->
        </table>
      </div>

      <%= link_to t('reminder.index.new_reminder'), new_reminder_path, class:"btn btn-primary reminder d-flex justify-content-center" %>

      <div>
        <h4 class="list">Liste détaillée des vaccinations</h4>
        <p><%= t('reminder.index.vaccin1') %>: <%= t('reminder.index.vaccine1') %></p>
        <p><%= t('reminder.index.vaccin2') %>: <%= t('reminder.index.vaccine2') %></p>
        <p><%= t('reminder.index.vaccin3') %>: <%= t('reminder.index.vaccine3') %></p>
        <p><%= t('reminder.index.vaccin4') %>: <%= t('reminder.index.vaccine4') %></p>
        <p><%= t('reminder.index.vaccine5') %>: <%= t('reminder.index.vaccine5') %></p>
      </div>


    </div>
  </div>
