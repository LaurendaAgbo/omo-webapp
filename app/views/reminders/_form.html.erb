<%= stylesheet_link_tag "reminder" %>

<div class="container pt-5">
  <div class="text-center admin registration">
    <div class="d-flex justify-content-center row">
      <div class="col-11 col-md-8 col-lg-8">
        <div class="content-box">

          <%= form_with(model: @reminder, local: true) do |form| %>

            <div class="field form-group">
              <%= form.text_field :parent_name, required: true, autofocus: true, class: "form-control", placeholder: t('reminder.new.parent_name') %>
            </div>

            <div class="field form-group">
              <%= form.text_field :child_name, required: true, class: "form-control", placeholder: t('reminder.new.child_name') %>
            </div>

            <div class="field form-group">
              <%= form.date_field :child_birthday, required: true, class: "form-control", placeholder: t('reminder.new.child_birthday') %>
            </div>

            <div class="field form-group">
              <%= form.text_field :parent_phone, required: true, class: "form-control", placeholder: t('reminder.new.parent_phone') %>
            </div>

            <div class="row" >
              <div class="d-flex justify-content-start">
                <p><strong><%= t('reminder.new.vaccines_list') %></strong></p>
              </div>
            </div>
            <div class="row" >
              <div class=" d-flex justify-content-start">
                <div class="field form-group">
                  <%= form.label t('reminder.new.vaccine1'), class: "pl-3" %>
                  <%= form.check_box :vaccine1 %>
                </div>
              </div>
            </div>
            <div class="row" >
              <div class=" d-flex justify-content-start">
                <div class="field form-group">
                  <%= form.label t('reminder.new.vaccine2'), class: "pl-3" %>
                  <%= form.check_box :vaccine2 %>
                </div>
              </div>
            </div>
            <div class="row" >
              <div class=" d-flex justify-content-start">
                <div class="field form-group">
                  <%= form.label t('reminder.new.vaccine3'), class: "pl-3" %>
                  <%= form.check_box :vaccine3 %>
                </div>
              </div>
            </div>
            <div class="row" >
              <div class=" d-flex justify-content-start">
                <div class="field form-group">
                  <%= form.label t('reminder.new.vaccine4'), class: "pl-3" %>
                  <%= form.check_box :vaccine4 %>
                </div>
              </div>
            </div>
            <div class="row" >
              <div class=" d-flex justify-content-start">
                <div class="field form-group">
                  <%= form.label t('reminder.new.vaccine5'), class: "pl-3" %>
                  <%= form.check_box :vaccine5 %>
                </div>
              </div>
            </div>

            <div class="field form-group">
              <%= form.submit t('reminder.new.submit_button'), class: "btn btn-primary reminder-submit d-flex justify-content-center" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
